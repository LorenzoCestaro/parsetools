#!/usr/bin/env python

import argparse
from textools import csv


parser = argparse.ArgumentParser()

parser.add_argument(
    'input',
    help='Input file path'
)

parser.add_argument(
    '-l', '--label',
    help='csv column label containing the html documents to parse',
    required=True
)

parser.add_argument(
    '-o', '--output',
    help='Output file path',
    default=None,
    required=False
)

parser.add_argument(
    '-r', '--recursive',
    action='store_true',
    help='Parse all files in a folder and save the result in a txt file with the same name as the original pdf',
    default=False,
    required=False
)

parser.add_argument(
    '-c', '--clean',
    action='store_true',
    help='Do some basic text cleaning',
    default=False,
    required=False
)

args = parser.parse_args()


# Action
csv.parse(
    path=args.input,
    label=args.label,
    output=args.output,
    recursive=args.recursive,
    clean=args.clean
)
